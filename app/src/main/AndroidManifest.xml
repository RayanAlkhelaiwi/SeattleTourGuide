<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.seattletourguide">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
            <activity
                android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".MainActivity"
            android:label="Main Activity"/>
        <activity
            android:name=".ActivitiesCategory"
            android:parentActivityName=".MainActivity"
            android:label="Activities" />
        <activity
            android:name=".CoffeehousesCategory"
            android:parentActivityName=".MainActivity"
            android:label="Coffeehouses" />
        <activity
            android:name=".RestaurantsCategory"
            android:parentActivityName=".MainActivity"
            android:label="Restaurants" />
        <activity
            android:name=".MuseumsCategory"
            android:parentActivityName=".MainActivity"
            android:label="Museums" />
    </application>
</manifest>